{
    "name": "bushiweb.dev",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint . --max-warnings 0 --cache",
        "format": "prettier . --write --cache",
        "stylelint": "stylelint \"**/*.css\" --cache --fix --max-warnings 0",
        "check": "npm run format && npm run lint && npm run stylelint"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "vite-tsconfig-paths": "^4.3.2"
    },
    "devDependencies": {
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@vitejs/plugin-react": "^4.2.1",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.34.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "postcss-preset-env": "^9.5.14",
        "prettier": "^3.3.2",
        "stylelint": "^16.6.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-no-unresolved-module": "^2.2.2",
        "stylelint-order": "^6.0.4",
        "stylelint-plugin-defensive-css": "^1.0.4",
        "stylelint-plugin-logical-css": "^1.2.1",
        "stylelint-rem-over-px": "^1.0.1",
        "stylelint-use-nesting": "^5.1.1",
        "typescript": "^5.2.2",
        "typescript-eslint": "^7.13.0",
        "vite": "^5.2.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog",
            "maxHeaderWidth": 50,
            "maxLineWidth": 72,
            "defaultType": "feat",
            "types": {
                "✨feat": {
                    "description": "A new feature",
                    "title": "Features"
                },
                "🐛fix": {
                    "description": "A bug fix",
                    "title": "Bug fix"
                },
                "📚docs": {
                    "description": "Changes made only to the documentation",
                    "title": "Documentation"
                },
                "🎨style": {
                    "description": "Alteration that don't change the code intent (white space, formatting, missing semi-colons, ...)",
                    "title": "Code styling"
                },
                "♻️ refactor": {
                    "description": "An update to the code that neither adds features nor fixes bugs",
                    "title": "Code refactoring"
                },
                "⚡perf": {
                    "description": "A performance enhancing tweak to the code",
                    "title": "Performance improvements"
                },
                "🧪test": {
                    "description": "Addition or update of tests",
                    "title": "Tests"
                },
                "⚒️ build": {
                    "description": "Modification to the build system or to external dependencies",
                    "title": "Builds"
                },
                "🚀ci": {
                    "description": "Modification to the CI configuration scripts and files",
                    "title": "Continuous Integration"
                },
                "⚙️ chore": {
                    "description": "Other updates that don't alter the test or source files",
                    "title": "Chores"
                },
                "🗑️ revert": {
                    "description": "Reverts a previous commit",
                    "title": "Reverts commit"
                },
                "🎉init": {
                    "description": "Initial commit",
                    "title": "Initial commit"
                },
                "📦metadata": {
                    "description": "Update to the metadata (package.json, ...)",
                    "title": "Update metadata"
                },
                "⏫dependencies": {
                    "description": "Update to dependencies",
                    "title": "Dependencies"
                },
                "⬆️ peerDependencies": {
                    "description": "Update to peer dependencies",
                    "title": "Peer dependencies"
                },
                "🔼devDependencies": {
                    "description": "Update to dev dependencies",
                    "title": "Dev dependencies"
                },
                "🏷️ release": {
                    "description": "Release a new version",
                    "title": "Release"
                }
            }
        }
    }
}
